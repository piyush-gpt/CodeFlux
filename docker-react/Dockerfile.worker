FROM node:20

WORKDIR /app

# Install system dependencies for node-pty
RUN apt-get update && apt-get install -y \
    python3 \
    make \
    g++ \
    build-essential \
    bash \
    && rm -rf /var/lib/apt/lists/*

# Copy entire worker code including package.json before installing
COPY worker/ ./  

# Remove any prebuilt node_modules (just in case)
RUN rm -rf node_modules

# Install dependencies and rebuild native modules (node-pty)
RUN npm install --build-from-source

# Setup workspace
RUN mkdir -p /workspace && chmod 777 /workspace

EXPOSE 3002
EXPOSE 5173
CMD ["node", "index.js"]
